{
  "name": "jasper",
  "private": true,
  "version": "1.1.3",
  "description": "A flexible and powerful issue reader for GitHub",
  "author": "h13i32maru",
  "homepage": "https://jasperapp.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasperapp/jasper"
  },
  "keywords": [],
  "main": "out/src/index.cjs",
  "scripts": {
    "clean": "rm -rf out",
    "build:main": "esbuild src/index.ts --bundle --platform=node --format=cjs --packages=external --outfile=out/src/index.cjs",
    "build:preload:main": "esbuild src/Renderer/Preload/main-window-preload.ts --bundle --platform=node --format=cjs --external:electron --external:@electron/* --outfile=out/src/Renderer/Preload/main-window-preload.cjs",
    "build:preload:issue": "esbuild src/Renderer/Preload/issue-window-preload.ts --bundle --platform=node --format=cjs --external:electron --external:@electron/* --outfile=out/src/Renderer/Preload/issue-window-preload.cjs",
    "build:renderer:main": "esbuild src/Renderer/Fragment/MainWindowFragment.tsx --bundle --platform=browser --format=esm --external:electron --external:@electron/* --outfile=out/src/Renderer/Fragment/MainWindowFragment.js",
    "build:renderer:issue": "esbuild src/Renderer/Fragment/IssueWindowFragment.tsx --bundle --platform=browser --format=esm --external:electron --external:@electron/* --outfile=out/src/Renderer/Fragment/IssueWindowFragment.js",
    "build:asset": "mkdir -p out/src/Renderer/asset && cp -a src/Renderer/asset/* out/src/Renderer/asset/",
    "build": "npm run clean && npm run build:main && npm run build:preload:main && npm run build:preload:issue && npm run build:renderer:main && npm run build:renderer:issue && npm run build:asset",
    "start": "JASPER=DEV electron .",
    "mac:run": "npm run mac:copy-icon && JASPER=DEV ./node_modules/.bin/electron ./",
    "mac:build": "./script/mac/build.sh",
    "mac:copy-icon": "cp ./misc/logo/jasper-dev.icns ./node_modules/electron/dist/Electron.app/Contents/Resources/electron.icns",
    "win:run": "./node_modules/.bin/electron ./",
    "win:build": "./script/win/build.sh",
    "linux:run": "./node_modules/.bin/electron ./",
    "linux:build": "./script/linux/build.sh",
    "tsc:watch": "./script/tsc/watch.sh",
    "env:setup": "./script/env/setup.sh"
  },
  "dependencies": {
    "@mdi/font": "^5.5.55",
    "dayjs": "1.11.0",
    "diff": "3.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "escape-html": "1.0.3",
    "react": "16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "16.13.1",
    "semver": "5.5.1",
    "sqlite3": "5.0.5",
    "styled-components": "5.1.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/react": "16.9.43",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "5.1.24",
    "@types/uuid": "^8.3.4",
    "electron": "^37.4.0",
    "electron-notarize": "1.2.1",
    "electron-packager": "15.4.0",
    "electron-winstaller": "5.0.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2"
  }
}
